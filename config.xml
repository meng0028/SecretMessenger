<?xml version='1.0' encoding='utf-8'?>
	<widget id="ca.edumedia.meng0028.secretmessenger" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
		<name>meng0028-SecretMessenger</name>
		<description> MAD9022 Final-Project Cordova IOS Secret Messenger App </description>
		<author email="dev@cordova.apache.org" href="http://cordova.io"> Apache Cordova Team </author>
		<content src="index.html" />
		<plugin name="cordova-plugin-whitelist" spec="1" />
		<access origin="*" />
		<allow-intent href="http://*/*" />
		<allow-intent href="https://*/*" />
		<allow-intent href="tel:*" />
		<allow-intent href="sms:*" />
		<allow-intent href="mailto:*" />
		<allow-intent href="geo:*" />
		<platform name="android">
			<allow-intent href="market:*" /> </platform>
		<platform name="ios">
			<allow-intent href="itms:*" />
			<allow-intent href="itms-apps:*" />
			<icon src="res/ios/icon-40.png" width="40" height="40" />
			<icon src="res/ios/icon-40@2x.png" width="80" height="80" />
			<icon src="res/ios/icon-small-50.png" width="50" height="50" />
			<icon src="res/ios/icon-small-50@2x.png" width="100" height="100" />
			<icon src="res/ios/icon-60.png" width="60" height="60" />
			<icon src="res/ios/icon-60@2x.png" width="120" height="120" />
			<icon src="res/ios/icon-60@3x.png" width="180" height="180" />
			<icon src="res/ios/icon-72.png" width="72" height="72" />
			<icon src="res/ios/icon-72@2x.png" width="144" height="144" />
			<icon src="res/ios/icon-76.png" width="76" height="76" />
			<icon src="res/ios/icon-76@2x.png" width="152" height="152" />
			<icon src="res/ios/icon.png" width="57" height="57" />
			<icon src="res/ios/icon@2x.png" width="114" height="114" />
			<icon src="res/ios/icon-small.png" width="29" height="29" />
			<icon src="res/ios/icon-small@2x.png" width="58" height="58" />
			<icon src="res/ios/icon-167.png" width="167" height="167" />
			
			<splash src="res/ios/screen/iphone3_port.png" width="320" height="480" />
			<splash src="res/ios/screen/iphone4_port.png" width="640" height="960" />
			<splash src="res/ios/screen/iphone5_port.png" width="640" height="1136" />
			<splash src="res/ios/screen/iphone6_port.png" width="750" height="1334" />
			<splash src="res/ios/screen/iphone6Plus_port.png" width="1242" height="2208" />
			<splash src="res/ios/screen/ipad_port.png" width="768" height="1024" />
			<splash src="res/ios/screen/ipadpro_port.png" width="1536" height="2048" />
			<splash src="res/ios/screen/iphone3_land.png" width="480" height="320" />
			<splash src="res/ios/screen/iphone4_land.png" width="960" height="640" />
			<splash src="res/ios/screen/iphone5_land.png" width="1136" height="640" />
			<splash src="res/ios/screen/iphone6_land.png" width="1334" height="750" />
			<splash src="res/ios/screen/iphone6Plus_land.png" width="2208" height="1242" />
			<splash src="res/ios/screen/ipad_land.png" width="1024" height="768" />
			<splash src="res/ios/screen/ipadpro_land.png" width="2048" height="1536" /> </platform>
		<preference name="AutoHideSplashScreen" value="true" />
		<preference name="SplashScreenDelay" value="1500" />
		<preference name="SplashMaintainAspectRatio" value="true" />
		<preference name="SplashShowOnlyFirstTime" value="false" /> </widget>